# Appwrite Configuration
APPWRITE_ENDPOINT=https://fra.cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your_project_id_here
APPWRITE_API_KEY=your_api_key_here

# Database Configuration
DATABASE_ID=marketplace_db
SCRIPTS_COLLECTION_ID=scripts
REVIEWS_COLLECTION_ID=reviews
USERS_COLLECTION_ID=users
PURCHASES_COLLECTION_ID=purchases
STORAGE_BUCKET_ID=scripts_files

# Cloud Functions Configuration
SEARCH_FUNCTION_ID=search_scripts
PROCESS_PURCHASE_FUNCTION_ID=process_purchase
UPDATE_STATS_FUNCTION_ID=update_script_stats

# API Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Security Configuration
ALLOWED_ORIGINS=https://fra.cloud.appwrite.io,http://localhost:3000,http://localhost:8080
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Feature Flags
ENABLE_PAYMENT_PROCESSING=false
ENABLE_USER_AUTHENTICATION=false